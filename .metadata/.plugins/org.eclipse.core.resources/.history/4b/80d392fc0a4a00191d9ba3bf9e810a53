package ro.ase.cts.tests;

import org.junit.AfterClass;
import org.junit.BeforeClass;
import org.junit.Test;

import ro.ase.cts.utils.CoffeeDB;

public class CoffeeDBTest {
	
	@BeforeClass
	public static void connectDB() {
		CoffeeDB.connectDB("pizza", "lala");
	}
	
	@AfterClass
	public static void disconnectDB() {
		CoffeeDB.closeDB("lala", "band");
	}
	
	@Test
	public void testSomething() {
		System.out.println(CoffeeDB.coffeeNames.size());
	}
	
	@Test
	public void testQueryMethod() {
		assertEquals(CoffeeDB.selectCoffeeByIndex(0), CoffeeDB.selectCoffeeByName("Late"));
	}
}
